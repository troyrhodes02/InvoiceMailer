{
  "ApplicationSettings": {
    "ApplicationName": "InvoiceMailerUI",
    "Description": "Production email sender for invoices",
    "Version": "1.0.0"
  },
  "Email": {
    "TestMode": true,
    "TenantId": "PLACEHOLDER_YOUR_TENANT_ID",
    "ClientId": "PLACEHOLDER_YOUR_CLIENT_ID",
    "ClientSecret": "PLACEHOLDER_YOUR_CLIENT_SECRET",
    "SenderEmail": "invoices@yourdomain.com"
  },
  "InvoiceScanner": {
    "ScanPath": "invoices",
    "Pattern": "INV\\d+"
  },
  "RecipientLookup": {
    "CsvPath": "recipients.csv"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/invoicemailer-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Security": {
    "ClientSecretLastRotated": "2023-05-15",
    "ClientSecretRotationDue": "2024-05-15",
    "Note": "ClientSecret must be rotated annually per IT security policy"
  }
} 